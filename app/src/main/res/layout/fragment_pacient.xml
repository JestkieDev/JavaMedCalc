<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pnameTV"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:text="ФИО"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pageTV"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Возраст"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pnameTV" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="Отчеты:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/pageTV"
        app:layout_constraintTop_toBottomOf="@+id/pageTV" />

    <TextView
        android:id="@+id/pimtTV"
        android:layout_width="378dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="ИМТ:"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/pcapTV"
        android:layout_width="378dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Скорость внутривенного капельного введения препарата:"
        app:layout_constraintStart_toStartOf="@+id/pimtTV"
        app:layout_constraintTop_toBottomOf="@+id/pimtTV" />

    <TextView
        android:id="@+id/pinfTV"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Скорость инфузии препарата:"
        app:layout_constraintStart_toStartOf="@+id/pcapTV"
        app:layout_constraintTop_toBottomOf="@+id/pcapTV" />

    <TextView
        android:id="@+id/pdefTV"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="Дефецит калия:"
        app:layout_constraintStart_toStartOf="@+id/pinfTV"
        app:layout_constraintTop_toBottomOf="@+id/pinfTV" />
</androidx.constraintlayout.widget.ConstraintLayout>